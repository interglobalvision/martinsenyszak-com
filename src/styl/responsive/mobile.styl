$gutter = 16px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 12px
$font-size-extra = 48px
$font-size-large = 36px
$font-size-mid = 24px
$font-size-small = 11px
$font-size-tiny = 8px

grid-maker(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

// ******************************************************

#header
  position: fixed
  top: 0
  left: 0
  width: 100vw
  z-index: 200

#header-logotype
  max-width: 250px
  svg
    margin-bottom: -2px

@media screen and (min-width: 320px)
  #menu
    font-size: .8rem;

@media screen and (min-width: 375px)
  #menu
    font-size: 1rem;

@media screen and (min-width: 480px)
  #header-logotype
    svg
      margin-bottom: -4px

@media screen and (min-width: 520px)
  #header-logotype
    svg
      margin-bottom: -5px

#menu
  .active
    font-weight: bold
    color: $color-black

// ******************************************************

.ratio-1-1
  video
    max-height: 51vh

.ratio-4-3
  video
    max-height: 66vh

video
  max-width: 100%
  height: auto
  object-fit: cover

// ******************************************************

.post-password-form
  input
    padding: 5px
  input[type=submit]
    border-radius: 3px
    font-weight: 300

// ******************************************************

#gdpr
  display: none
  position: fixed
  bottom: 0
  width: 100%
  z-index: 100
  background-color: $color-black
  color: $color-white
  z-index: 100

a.gdpr-button
  appearance: button
  padding: .3rem 1rem
  border-radius: .6rem
  line-height: 1
  background-color: $color-white
  color: $color-black